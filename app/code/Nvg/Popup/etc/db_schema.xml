<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="requests_for_prices" resource="default" comment="requests_for_prices">
        <column xsi:type="int"
                name="id"
                unsigned="true"
                padding="10"
                nullable="false"
                identity="true"
                comment="id"/>
        <column xsi:type="varchar"
                name="name"
                length="30"
                nullable="false"
                comment="User name"/>
        <column xsi:type="varchar"
                name="email"
                length="60"
                nullable="false"
                comment="Email"/>
        <column xsi:type="text"
                name="sku"
                nullable="false"
                comment="SKU"/>
        <column xsi:type="text"
                name="comment"
                nullable="false"
                comment="Comment"/>
        <column xsi:type="int"
                name="status"
                default="0"
                nullable="true"
                unsigned="true"
                padding="3"
                identity="false"
                comment="Status"/>
        <column xsi:type="date"
                name="created"
                nullable="false"
                comment="Created at"/>
        <constraint xsi:type="primary" referenceId = "PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
